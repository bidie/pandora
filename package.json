{
  "name": "pandora.js",
  "version": "0.0.1",
  "devDependencies": {
    "git-hooks": "^1.1.10",
    "lerna": "^3.20.2",
    "mwts": "^1.0.4",
    "nyc": "^13.1.0",
    "pandora-site-tools": "^1.0.0",
    "ts-node": "^7.0.1",
    "typedoc": "^0.13.0",
    "typescript": "~3.8.0",
    "vuepress": "^0.14.4"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "build": "lerna run build",
    "lint": "lerna exec mwts check",
    "lint:fix": "lerna exec mwts fix",
    "test": "lerna run test --concurrency=1 --stream",
    "cov": "nyc lerna run cov --concurrency=1 --stream",
    "ci": "npm run build && npm run cov",
    "purge": "npm run clean && rm -rf node_modules",
    "clean": "lerna clean --yes; rm -rf ./packages/**/package-lock.json",
    "reset": "npm run purge && npm i && npm run ci",
    "publish": "sh scripts/publish.sh",
    "beta": "sh scripts/publish.sh --npm-tag pandora2-beta --force-publish=*",
    "canary": "sh scripts/publish.sh --canary",
    "authors": "git log --format='%aN <%aE>' | sort -u > AUTHORS"
  },
  "keywords": [
    "container",
    "runtime",
    "cluster",
    "service",
    "application"
  ],
  "homepage": "https://github.com/midwayjs/pandora",
  "repository": {
    "type": "git",
    "url": "https://github.com/midwayjs/pandora.git"
  },
  "engines": {
    "node": ">= 8.2.1"
  },
  "license": "MIT",
  "nyc": {
    "include": [
      "packages/**/src/*.ts",
      "packages/**/src/**/*.ts"
    ],
    "exclude": [
      "**/typings",
      "**/*.d.ts",
      "**/dist",
      "**/src/index.ts",
      "**/src/types.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
