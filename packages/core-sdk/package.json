{
  "name": "pandora-core-sdk",
  "version": "2.2.0",
  "description": "Pandora 2 Core SDK",
  "main": "dist/index",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "start": "npm run build && node dist/index",
    "lint": "../../node_modules/.bin/tslint --format prose -c ../../tslint.json src/**/*.ts test/**/*.ts",
    "test": "npm run lint && NODE_ENV=unittest mocha --trace-warnings",
    "cov": "nyc mocha",
    "ci": "npm run test",
    "gen-api-ref": "../../node_modules/.bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../docs/.vuepress/dist/api-reference/env src/"
  },
  "keywords": [
    "pandora"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/extend": "^3.0.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^12.0.0",
    "@types/reflect-metadata": "^0.1.0",
    "chai": "^3.5.0",
    "mm": "^2.1.0",
    "mocha": "^3.5.0",
    "nyc": "^13.1.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "dist",
      "src/index.ts",
      "src/types.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "debug": "^4.1.0",
    "egg-logger": "^2.3.1",
    "extend": "^3.0.2",
    "pandora-component-actuator-server": "^2.2.0",
    "pandora-component-decorator": "^2.1.2",
    "pandora-component-indicator": "^2.1.2",
    "pandora-component-ipc-hub": "^2.1.2",
    "pandora-dollar": "^2.1.2",
    "pandora-hub": "^2.1.2",
    "reflect-metadata": "^0.1.12",
    "resolve": "^1.8.1"
  }
}
