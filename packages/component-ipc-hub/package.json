{
  "name": "@pandorajs/component-ipc-hub",
  "version": "2.1.2",
  "description": "Pandora 2 Component IPC Hub",
  "main": "build/src/ComponentIPCHub.js",
  "typings": "build/src/ComponentIPCHub.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "test": "NODE_ENV=unittest mocha",
    "cov": "nyc mocha",
    "ci": "npm run test"
  },
  "keywords": [
    "pandora"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.0.0",
    "chai": "^4.2.0",
    "mocha": "^7.1.2",
    "nyc": "^13.1.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "dist"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.d.ts"
  ],
  "dependencies": {
    "@pandorajs/component-decorator": "^2.1.2",
    "@pandorajs/dollar": "^2.1.2",
    "@pandorajs/hub": "^2.1.2"
  }
}
