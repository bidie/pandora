{
  "name": "@pandorajs/component-trace",
  "version": "2.2.0",
  "description": "Pandora 2 Component Trace",
  "main": "build/src/ComponentTrace.js",
  "typings": "build/src/ComponentTrace.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "test": "# SKIP NODE_ENV=unittest mocha --trace-warnings",
    "cov": "nyc mocha",
    "ci": "npm run test"
  },
  "keywords": [
    "pandora"
  ],
  "license": "MIT",
  "devDependencies": {
    "@pandorajs/component-actuator-server": "^2.2.0",
    "@pandorajs/component-indicator": "^2.1.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.0.0",
    "mocha": "^7.1.2",
    "nyc": "^13.1.0",
    "sinon": "^7.2.3",
    "supertest": "^3.4.1"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "dist",
      "src/types.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.d.ts"
  ],
  "dependencies": {
    "@opentelemetry/api": "^0.7.0",
    "@opentelemetry/node": "^0.7.0",
    "@opentelemetry/tracing": "^0.7.0",
    "@pandorajs/component-decorator": "^2.1.2",
    "@pandorajs/dollar": "^2.1.2"
  }
}
